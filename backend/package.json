{
  "name": "agi-holdings-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "AGI Holdings Backend - Scanner, Evaluator, Executor",
  "main": "main.ts",
  "scripts": {
    "start": "npx tsx main.ts",
    "dev": "npx tsx watch main.ts",
    "scanner": "npx tsx scanner/index.ts",
    "evaluator": "npx tsx evaluator/index.ts",
    "twitter": "npx tsx twitter-bot/index.ts",
    "telegram": "npx tsx telegram-bot/index.ts",
    "all": "concurrently \"npm run start\" \"npm run twitter\" \"npm run telegram\"",
    "build": "tsc"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "concurrently": "^8.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "ethers": "^6.13.4",
    "express": "^4.18.2",
    "@napi-rs/canvas": "^0.1.44",
    "tsx": "^4.19.0",
    "twitter-api-v2": "^1.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0"
  }
}
